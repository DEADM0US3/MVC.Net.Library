@model FernandoLibrary.Persistance.Entities.Prestamo

@{
ViewData["Title"] = "Devolver Libro";
}

<div class="container mt-4">
    <h1 class="display-4">Devolver Libro</h1>

    <div class="alert alert-warning" role="alert">
        <h4>¿Estás seguro de que quieres devolver este libro?</h4>
    </div>

    <dl class="row">
        <dt class="col-sm-2">Libro</dt>
        <dd class="col-sm-10">@Model.Libro.Titulo</dd>
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Usuario.Nombre</dd>
        <dt class="col-sm-2">Fecha de Préstamo</dt>
        <dd class="col-sm-10">@Model.FechaPrestamo.ToShortDateString()</dd>
    </dl>

    <form asp-action="Devolver">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-success">
            <i class="fas fa-undo"></i> Devolver
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancelar
        </a>
    </form>
</div>

@section Scripts {
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}