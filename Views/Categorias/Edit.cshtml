@model FernandoLibrary.Persistance.Entities.Categoria

@{
ViewData["Title"] = "Editar Categoría";
Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="display-4">Editar Categoría</h1>

    <form asp-action="Edit" method="post" class="mt-4">
        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model?.Nombre" required />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar Cambios
            </button>
            <a class="btn btn-secondary" href="@Url.Action("Index")">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}