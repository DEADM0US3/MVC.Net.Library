@model IEnumerable<FernandoLibrary.Persistance.Entities.Usuario>

@{
ViewData["Title"] = "Usuarios";
}

<div class="container mt-4">
    <h1 class="display-4">Usuarios</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Crear Nuevo Usuario
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Usuario</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var usuario in Model)
            {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.LastName</td>
                <td>@usuario.UserName</td>
                <td>@usuario.Email</td>
                <td>    @if (usuario.RoleId == 1)
                    {
                        @if (usuario.Id == 2)
                        {
                            <span>Admin</span>
                        }
                        else
                        {
                            <span>Trabajador</span>
                        }
                    }
                    else
                    {
                        <span>Usuario</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>

